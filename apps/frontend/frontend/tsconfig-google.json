{
  "extends": "./tsconfig.json",

  "compilerOptions": {
    // Allow `gts clean` to delete `build/` folder.
    // If this is disabled, `gts clean` has no effect.
    "outDir": "./build",

    // Always emit type information, even for .js files
    "declaration": true,
    "declarationMap": true
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
